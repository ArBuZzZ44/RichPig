<%= form_with model: @wallet do |f| %>
	<%= render "shared/errors", object: @wallet %>

	<div>
		<div>
			<%= f.label :budget %>
		</div>

		<div class="mt-2">
			<%= f.number_field :budget, placeholder: "Budget", class: "form-control" %>
		</div>
	</div>

	<div>
		<div class="mt-2">
			<%= f.label :start_date %>
		</div>

		<div class="mt-2">
			<%= f.date_field :start_date %>
		</div>
	</div>

	<div>
		<div class="mt-2">
			<%= f.label :end_date %>
		</div>

		<div class="mt-2">
			<%= f.date_field :end_date %>
		</div>
	</div>

	<%= f.submit "Ð¡reate the budget", class: "btn btn-primary mt-3" %>
<% end %>