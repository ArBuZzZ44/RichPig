<% provide :page_title, 'Edit capital' %>
<% currently_at('Capitals') %>

<h1>Edit goal</h1>

<%= form_with model: @capital do |f| %>
	<%= render 'shared/errors', object: @capital %>

	<div>
		<div>
			<%= f.label :goal %>
		</div>

		<div>
			<%= f.text_field :goal, placeholder: "Goal", class: "form-control" %>
		</div>
	</div>

	<div>
		<div>
			<%= f.label :amount %>
		</div>

		<div>
			<%= f.number_field :amount %>
		</div>
	</div>

	<div>
		<div>
			<%= f.label :period, "Period (in months)" %>
		</div>

		<div>
			<%= f.number_field :period %>
		</div>
	</div>

	<%= f.submit "Edit", class: "btn btn-primary" %>
<% end %>